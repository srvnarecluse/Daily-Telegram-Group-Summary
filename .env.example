# Telegram API credentials (https://my.telegram.org)
API_ID=123456
API_HASH=your_telegram_api_hash

# Save from `npm run init-session`
STRING_SESSION=

# Group source. Examples: @mygroup OR -1001234567890
GROUP_ID_OR_USERNAME=

# Optional chat targets (comma-separated). Examples: me OR @username OR -1001234567890 OR me,@username,-1001234567890
# Default: me
SUMMARY_TARGET=me, @leenarash

# Optional AI summary using Gemini API
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
AI_MIN_MESSAGES_FOR_SUMMARY=10
AI_MAX_MESSAGES_FOR_SUMMARY=100
AI_MAX_CHARS_PER_MESSAGE=400
TELEGRAM_MESSAGE_MAX_CHARS=3900
INCLUDE_MESSAGE_HIGHLIGHTS=false

# Optional guardrail to prevent huge reads on very active groups
MAX_MESSAGES_PER_RUN=3000

# Optional scheduler config (node-cron format with seconds field)
CRON_TIMEZONE=Asia/Kolkata
SUMMARY_CRON_NO_AI=0 30 15 * * *
SUMMARY_CRON_WITH_AI=0 0 20 * * *
